{
    "name": "makalin/php-embeddings",
    "description": "CLI to convert CSV â†’ OpenAI-compatible vector DB with pure-PHP SIMD-style vector ops",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehmet T. AKALIN",
            "email": "mehmet@makalin.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PhpEmbeddings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpEmbeddings\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/pe"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs src/ tests/",
        "lint-fix": "phpcbf src/ tests/",
        "stan": "phpstan analyse src/",
        "cs-fix": "php-cs-fixer fix src/ tests/",
        "qa": [
            "@cs-fix",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
